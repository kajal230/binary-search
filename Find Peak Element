class Solution {
public:
    int findPeakElement(vector<int>& nums) {
        int n=nums.size();
        int st=0, en=n-1;
        int mid=0;
        while(st<en){
            mid=st+(en-st)/2;
            if(nums[mid]<nums[mid+1]){
                st=mid+1;
            }else{
                en=mid;
            }
        }
        return st;
    }
};

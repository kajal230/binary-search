class Solution {
public:
    bool searchMatrix(vector<vector<int>>& mat, int target) {
        int i=0; 
        int n=mat.size();
        int j=mat[0].size()-1;
        while(i<n && j>=0){
            int temp=mat[i][j];
            if(temp==target)return true;
            else if(temp<target)i++;
            else
            j--;
        }
        return false;

    }
};
